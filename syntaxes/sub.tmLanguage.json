{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "SUB",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#blockchain-operator"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.sub",
          "match": "//.*$"
        }
      ]
    },
    "blockchain-operator": {
      "patterns": [
        {
          "name": "keyword.operator.blockchain.sub",
          "match": "^\\s*#"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.sub",
          "match": "\\b(var|function|if|elif|else|for|while|return|end|embed|endembed|ui|import|from|try|catch|class|extends|new|this)\\b"
        },
        {
          "name": "constant.language.sub",
          "match": "\\b(true|false|null)\\b"
        },
        {
          "name": "storage.type.sub",
          "match": "\\b(var|function|class)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.sub",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.sub",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.sub",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.sub",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.sub",
          "match": "\\b([0-9]+\\.?[0-9]*)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.sub",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "support.function.builtin.sub",
          "match": "\\b(print|input|length|concat|substring|abs|sqrt|pow|random|range)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.sub",
          "match": "(\\+|\\-|\\*|\\/|%)"
        },
        {
          "name": "keyword.operator.comparison.sub",
          "match": "(==|!=|<|>|<=|>=)"
        },
        {
          "name": "keyword.operator.assignment.sub",
          "match": "="
        },
        {
          "name": "keyword.operator.logical.sub",
          "match": "\\b(and|or|not)\\b"
        }
      ]
    }
  },
  "scopeName": "source.sub"
}
